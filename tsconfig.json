{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "./setupTests.ts"],
  "exclude": ["node_modules"]
}
